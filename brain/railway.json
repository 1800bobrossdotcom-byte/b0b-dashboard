{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile",
    "buildCommand": "docker build --build-arg CACHE_BUST=$(date -u +%Y-%m-%dT%H:%M:%SZ) -t brain .",
    "watchPatterns": [
      "brain-server.js",
      "agents/**",
      "l0re*.js",
      "data/**",
      "data/turb0b00st-state.json",
      "package.json",
      "Dockerfile"
    ]
  },
  "deploy": {
    "startCommand": "node brain-server.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "numReplicas": 1,
    "sleepApplication": false
  }
}
